#!/bin/bash

# Private NAS CLI
# Wraps docker-compose to manage the NAS from anywhere

# Determine installation location (resolving symlinks)
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
  DIR="$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
INSTALL_DIR="$( cd -P "$( dirname "$SOURCE" )/.." >/dev/null 2>&1 && pwd )"

# User Config Directory
CONFIG_DIR="$HOME/.config/private-nas"
ENV_FILE="$CONFIG_DIR/.env"

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m'

check_docker() {
    if ! command -v docker &> /dev/null; then
        echo -e "${RED}Error: Docker is not installed.${NC}"
        exit 1
    fi
    
    if docker compose version &> /dev/null; then
        COMPOSE_CMD="docker compose"
    elif command -v docker-compose &> /dev/null; then
        COMPOSE_CMD="docker-compose"
    else
        echo -e "${RED}Error: docker-compose plugin not found.${NC}"
        exit 1
    fi
}

setup() {
    mkdir -p "$CONFIG_DIR"
    
    if [ -f "$ENV_FILE" ]; then
        read -p "Config exists. Overwrite? [y/N]: " overwrite
        if [[ $overwrite != "y" ]]; then
            echo "Skipping setup."
            return
        fi
    fi

    echo -e "${BLUE}=== Private NAS Configuration ===${NC}"
    
    DEFAULT_HOST=$(curl -s ifconfig.me || echo "localhost")
    read -p "Public IP/Hostname [${DEFAULT_HOST}]: " WG_HOST
    WG_HOST=${WG_HOST:-$DEFAULT_HOST}
    
    read -p "VPN Admin Password [admin123]: " WG_PASSWORD
    WG_PASSWORD=${WG_PASSWORD:-admin123}
    
    echo "Generating password hash..."
    # Generate bcrypt hash using node directly to ensure clean output
    RAW_HASH=$(docker run --rm --entrypoint node ghcr.io/wg-easy/wg-easy -e 'console.log(require("bcryptjs").hashSync(process.argv[1], 10))' "$WG_PASSWORD")
    # Escape $ characters for docker-compose (replace $ with $$)
    WG_PASSWORD_HASH=$(echo "$RAW_HASH" | sed 's/\$/\$\$/g')
    
    if [[ "$OSTYPE" == "darwin"* ]]; then
        DEFAULT_VOLUMES="/Volumes"
    else
        DEFAULT_VOLUMES="/mnt"
    fi
    read -p "Host Path to share [${DEFAULT_VOLUMES}]: " HOST_VOLUMES_PATH
    HOST_VOLUMES_PATH=${HOST_VOLUMES_PATH:-$DEFAULT_VOLUMES}
    
    cat > "$ENV_FILE" <<EOF
WG_HOST=${WG_HOST}
WG_PASSWORD_HASH=${WG_PASSWORD_HASH}
HOST_VOLUMES_PATH=${HOST_VOLUMES_PATH}
EOF
    echo -e "${GREEN}Configuration saved to $ENV_FILE${NC}"
}

start() {
    check_docker
    if [ ! -f "$ENV_FILE" ]; then
        echo "Configuration not found. Running setup..."
        setup
    fi
    
    echo -e "${BLUE}Starting Private NAS...${NC}"
    # Use project docker-compose but user env file
    cd "$INSTALL_DIR" && $COMPOSE_CMD --env-file "$ENV_FILE" up -d --build
    
    echo -e "${GREEN}Services Started!${NC}"
    echo "Frontend: http://localhost"
    echo "VPN Admin: http://localhost:51821"
}

stop() {
    echo -e "${BLUE}Stopping Private NAS...${NC}"
    cd "$INSTALL_DIR" && $COMPOSE_CMD --env-file "$ENV_FILE" down
    echo -e "${GREEN}Stopped.${NC}"
}

logs() {
    cd "$INSTALL_DIR" && $COMPOSE_CMD --env-file "$ENV_FILE" logs -f
}

help() {
    echo "Usage: private-nas [command]"
    echo "Commands:"
    echo "  start   - Start the NAS (builds and runs containers)"
    echo "  stop    - Stop the NAS"
    echo "  restart - Restart the NAS"
    echo "  logs    - View logs"
    echo "  setup   - Reconfigure settings"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    logs)
        logs
        ;;
    setup)
        setup
        ;;
    *)
        help
        ;;
esac
